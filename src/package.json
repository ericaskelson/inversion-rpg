{
  "name": "src",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:edit": "concurrently \"vite\" \"node editor-server.js\"",
    "convert-images": "node ../tools/convert-to-webp.js",
    "cleanup-dist": "node ../tools/cleanup-dist-images.js",
    "cleanup-portraits": "node ../tools/cleanup-orphaned-portraits.js --apply",
    "build": "npm run cleanup-portraits && npm run convert-images && tsc -b && vite build && npm run cleanup-dist",
    "build:dev": "npm run cleanup-portraits && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "express": "^4.21.2",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
